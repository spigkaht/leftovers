
  <div data-action="scroll@window->navbar#onScroll" data-controller="navbar" class="new-navbar">
    <div class="py-4 px-4 d-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center">
        <%# Logo %>
        <%=  image_tag "new-leftovers.svg" %>
        <%# Links %>
        <div class="d-flex align-items-center">
          <%= link_to "Home", recipes_path, class: "me-2 btn btn-outline-light navbar-btn" %>
          <%= link_to("Favourites", favourites_recipes_path, class: "me-2 btn btn-outline-light navbar-btn") if user_signed_in? %>
        </div>
      </div>
      <div>
        <% if user_signed_in? %>
          <%# Avatar %>
          <div class="btn-group">
            <%# <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
              Right-aligned menu
            </button> %>
            <%=link_to "Log Out", destroy_user_session_path, class: "dropdown-item", class: "me-2 btn btn-outline-light navbar-btn", data: { turbo_method: :delete, confirm: 'Are you really not hungry?' }%>
          </div>
        <% else %>
          <%# Sign in links %>
          <%= link_to "Login", new_user_session_path %>
          <%= link_to "Signup", new_user_registration_path %>
        <% end %>
      </div>
    </div>
  </div>
