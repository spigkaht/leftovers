<%= render 'shared/split_view', img_url: image_path('loginpage.jpg') do %>
  <h1>Log in</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs registration-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: "html", autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-lg btn-outline-dark w-100" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>
